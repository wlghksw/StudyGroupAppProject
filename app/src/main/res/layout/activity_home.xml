<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#f9fafc">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/hometoolbar"
                app:titleTextColor="@color/white"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                <!-- 가운데 제목 -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="19sp"
                    android:background="@drawable/homelogo"/>

            </androidx.appcompat.widget.Toolbar>

            <!--검색창-->
            <EditText
                android:id="@+id/home_search"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/border"
                android:drawableStart="@drawable/sc"
                android:drawablePadding="5dp"
                android:layout_marginTop="15dp"
                android:hint="검색"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <!--추천 클래스 목록-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="금주의 추천 클래스"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>

            <!--추천 클래스 리사이클 뷰-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gallery1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingStart="20dp"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <!-- 클래스 카테고리 헤더 (전체보기 포함) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="클래스 카테고리"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/all_ct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체보기 >"
                    android:textColor="#5B5B5B"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 카테고리 버튼 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center">

                <!-- 버튼 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn1"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인기 클래스"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- 버튼 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/btn2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn2"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="어학"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- 버튼 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn3"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="코딩"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- 버튼 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn4"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홈트레이닝"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- 버튼 5 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/btn5"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="크리에이티브"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 커뮤니티 하이라이트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="커뮤니티 하이라이트"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/all_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체보기 >"
                    android:textColor="#5B5B5B"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 인기 게시글 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_hot_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 하단 네비게이션 뷰 -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="labeled"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            app:itemIconTint="@color/navy"
            app:itemTextColor="@color/black"
            app:itemActiveIndicatorStyle="@style/Theme.OneThree.Indicator"
            app:menu="@menu/bottom_nav_menu"/>

        <!-- 플로팅 홈 버튼 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_home"
            app:layout_anchor="@id/bottom_navigation"
            android:src="@drawable/homeic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/navy"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.FloatingActionButton"
            app:fabCustomSize="70dp"
            app:maxImageSize="40dp"
            app:tint="@null"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
